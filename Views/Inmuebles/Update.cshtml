@{

    ViewData["Title"] = "Actualizar Inmueble";
      var ListaPropietarios = (IList<Propietario>)ViewBag.listaPropietarios;
        var Inmueble = ViewBag.inmueble;
}



<div class="d-flex justify-content-center align-items-center">
    <div class="card col-lg-6 col-md-8 col-sm-10 mt-5">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Actualizar Inmueble</h3>
        </div>
        <div class="card-body">
            <form class="container mt-5" asp-action="UpdateInmueble" method="post">
                <input type="hidden" id="id" value="@Inmueble.Id" name="id">
                <div class="form-group">
                    <label for="direccion" class="form-label"><i class="ion-location"></i> Direccion</label>
                    <input type="text" value="@Inmueble.Direccion" class="form-control" id="direccion"
                        name="direccion" placeholder="Ingrese la direccion">
                </div>
                <div class="form-group">
                    <label for="uso" class="form-label"><i class="ion-flag"></i> Uso</label>
                    <input type="text" value="@Inmueble.Uso" class="form-control" id="uso" name="uso"
                        placeholder="Ingrese el uso">
                </div>
                <div class="form-group">
                    <label for="tipo" class="form-label"><i class="ion-card"></i> Tipo</label>
                    <input type="text" value="@Inmueble.Tipo" class="form-control" id="tipo" name="tipo"
                        placeholder="Ingrese el tipo">
                </div>
                <div class="form-group">
                    <label for="cantidadAmbientes" class="form-label"><i class="ion-ios-home"></i> Cantidad de
                        ambientes</label>
                    <input type="text" value="@Inmueble.CantidadAmbientes" class="form-control"
                        id="cantidadAmbientes" name="cantidadAmbientes" placeholder="Ingrese la cantidad de ambientes">
                </div>
                <div class="form-group">
                    <label for="coordenadas" class="form-label"><i class="ion-pinpoint"></i> Coordenadas</label>
                    <input type="text" value="@Inmueble.Coordenadas" class="form-control" id="coordenadas"
                        name="coordenadas" placeholder="Ingrese las coordenadas">
                </div>
                <div class="form-group">
                    <label for="precioInmueble" class="form-label"><i class="ion-cash"></i> Precio</label>
                    <input type="text" value="@Inmueble.PrecioInmueble" class="form-control" id="precioInmueble"
                        name="precioInmueble" placeholder="Ingrese el precio">
                </div>
                <div class="form-group">
                    <label for="estado" class="form-label"><i class="ion-checkmark-circled"></i> Estado</label>
                    <select class="form-control" id="estado" name="estado">
                        <option value="disponible">disponible</option>
                        <option value="agotado">agotado</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="idPropietario" class="form-label"><i class="ion-person"></i> Propietario</label>
                    <select class="form-control select2" id="idPropietario" name="idPropietario">
                        @foreach (var propietario in ListaPropietarios)
                        {
                             @:<option value="@propietario.Id" @(propietario.Id == @Inmueble.IdPropietario ? "selected" : "")> @propietario.ToString() </option>
                        }
                    </select>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary"><i class="ion-ios-checkmark"></i> Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
