@{
    ViewData["Title"] = "Crear Pago";
    var ListaContratos = (IList<Contrato>)ViewBag.listaContratos;
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card col-lg-6 col-md-8 col-sm-10 mt-5">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Nuevo Pago</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label for="importe" class="form-label"><ion-icon name="cash-outline"></ion-icon> Importe:</label>
                    <input type="number" class="form-control" id="importe" name="importe" placeholder="Ingrese importe">
                </div>

                <div class="form-group">
                    <label for="fechaDePago" class="form-label"><ion-icon name="calendar-outline"></ion-icon> Fecha de
                        pago</label>
                    <input type="date" class="form-control" id="fechaDePago" name="fechaDePago"
                        placeholder="Ingrese fecha del pago">
                </div>

                <div class="form-group">
                    <label for="idContrato" class="form-label"><ion-icon name="document-text-outline"></ion-icon>
                        Contrato</label>
                    <select class="form-control select2" id="idContrato" name="idContrato">
                        <option value="">Seleccione un contrato...</option>
                        @if (@ViewBag.ContratoId != null)
                        {
                            @foreach (var contrato in ListaContratos.Where(c => c.Id == @ViewBag.ContratoId))
                            {
                                <option value="@ViewBag.ContratoId" selected>@contrato.ToString()</option>
                            }
                        }else{

                        @foreach (var contrato in ListaContratos)
                        {
                            if (contrato.Activo == true)
                            {
                                <option value="@contrato.Id">@contrato.ToString() </option>
                            }
                        }

                        }
                    </select>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary"><ion-icon name="save-outline"></ion-icon>
                        Guardar</button>
                </div>
            </form>

        </div>
    </div>
</div>
